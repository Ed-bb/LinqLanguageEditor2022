<UserControl x:Class="LinqLanguageEditor2022.Options.CodeStyleNewLineOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinqLanguageEditor2022.Options"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <CheckBox x:Name="cbOpenBraceOnNewLineForTypes" Content="Place open brace on new line for types" HorizontalAlignment="Left" Margin="30,36,0,0" VerticalAlignment="Top" IsThreeState="False" Checked="cbOpenBraceOnNewLineForTypes_Checked" Unchecked="cbOpenBraceOnNewLineForTypes_Unchecked"/>
        <CheckBox x:Name="cbOpenBraceOnNewLineForMethods" Content="Place open brace on new line for methods and local functions" HorizontalAlignment="Left" Margin="30,68,0,0" VerticalAlignment="Top"  IsThreeState="False"  Checked="cbOpenBraceOnNewLineForMethods_Checked" Unchecked="cbOpenBraceOnNewLineForMethods_Unchecked" />

    </Grid>
</UserControl>
